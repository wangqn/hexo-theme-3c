<!DOCTYPE html>
<html>
<%- partial('_partial/header') %>
<body>
<header class="mobile-header">
    <%- fragment_cache('mobile-header', function(){
        return partial('_partial/mobile-header');
    }) %>
</header>
<div class="main">
    <aside class="nav-left">
        <%- fragment_cache('left', function(){
            return partial('_partial/nav-left');
        }) %>
    </aside>
    <aside class="nav-middle" data-visible="<%= page.published ? true : false %>">
        <%- partial('_partial/nav-middle') %>
    </aside>
    <div class="post">
        <%- partial('_partial/article', {post: page, index: false}) %>
    </div>
</div>
<% if (!page.published) { %>
<script>
    var IN_PAGE = true;
</script>
<% } %>
<%- partial('_partial/footer') %>
</body>
</html>
